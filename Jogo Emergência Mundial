  <script>
    let eventos = {
      engenharia: 'evento1',
      ciencia: 'evento2',
      sistemas: 'evento3',
      comunicacao: 'evento4',
      artes: 'evento5'
    };
    let emergencias = 5;
    let pontos = 0;

    function resolverEvento(gti) {
      let eventoId = eventos[gti];
      let eventoDiv = document.getElementById(eventoId);
      if (eventoDiv && eventoDiv.style.display !== 'none') {
        eventoDiv.style.display = 'none';
        emergencias--;
        pontos += 5;
        atualizarStatus(`VocÃª aplicou uma soluÃ§Ã£o do GTI ${gti.toUpperCase()}!`);
      } else {
        atualizarStatus(`Essa aÃ§Ã£o nÃ£o resolveu nenhum novo evento.`);
      }

      if (emergencias === 0) {
        document.getElementById('status').innerHTML += '<br><strong>ğŸŒŸ ParabÃ©ns! VocÃª resolveu todas as emergÃªncias e sua escola virou referÃªncia em SaÃºde PlanetÃ¡ria!</strong>';
      }
    }

    function atualizarStatus(mensagem) {
      document.getElementById('status').innerHTML = `<strong>Status:</strong> ${emergencias} eventos ativos | NÃ­vel de EmergÃªncia: ${emergencias} | EsperanÃ§a ativa: ${pontos} pontos<br>${mensagem}`;
    }
  </script>
