  <h2>Ações dos GTIs</h2>
  <div class="actions">
    <button class="button" onclick="resolverEvento('engenharia')">GTI Engenharia 🌳</button>
    <button class="button" onclick="resolverEvento('sistemas')">GTI Sistemas Alimentares 🥕</button>
    <button class="button" onclick="resolverEvento('comunicacao')">GTI Comunicação 📣</button>
    <button class="button" onclick="resolverEvento('ciencia')">GTI Ciência Cidadã 🔬</button>
    <button class="button" onclick="resolverEvento('artes')">GTI Artes 🎭</button>
  </div>

  <div class="status" id="status">
    <strong>Status:</strong> 5 eventos ativos | Nível de Emergência: 5 | Esperança ativa: 0 pontos
  </div>

  <script>
    let eventos = {
      engenharia: 'evento1',
      ciencia: 'evento2',
      sistemas: 'evento3',
      comunicacao: 'evento4',
      artes: 'evento5'
    };
    let emergencias = 5;
    let pontos = 0;

    function resolverEvento(gti) {
      let eventoId = eventos[gti];
      let eventoDiv = document.getElementById(eventoId);
      if (eventoDiv && eventoDiv.style.display !== 'none') {
        eventoDiv.style.display = 'none';
        emergencias--;
        pontos += 5;
        atualizarStatus(`Você aplicou uma solução do GTI ${gti.toUpperCase()}!`);
      } else {
        atualizarStatus(`Essa ação não resolveu nenhum novo evento.`);
      }

      if (emergencias === 0) {
        document.getElementById('status').innerHTML += '<br><strong>🌟 Parabéns! Você resolveu todas as emergências e sua escola virou referência em Saúde Planetária!</strong>';
      }
    }

    function atualizarStatus(mensagem) {
      document.getElementById('status').innerHTML = `<strong>Status:</strong> ${emergencias} eventos ativos | Nível de Emergência: ${emergencias} | Esperança ativa: ${pontos} pontos<br>${mensagem}`;
    }
  </script>
</body>
